@model PersonalBlog.Models.Tables.StaticPage

@{
    ViewBag.Title = "EditAbout";
}

<div class="row">
    <div class="col-md-12">
        <h1>Edit About</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("EditAbout", "Admin", FormMethod.Post))
        {
            <input type="hidden" value="2" name="id" />
            @Html.TextAreaFor(m => m.PageBody)
            <button type="submit" class="btn btn-success">Submit</button>
        }
    </div>
</div>

