@model PersonalBlog.Models.Tables.Post
@{
    ViewBag.Title = "EditPost";
}

@using (Html.BeginForm("UpdatePost", "Admin", FormMethod.Post))
{
    <input name="id" type="hidden" value="@Model.PostId" />
    <label for="title">Title: </label>
    <input type="text" name="title" class="form-control" id="title" value="@Model.PostTitle"/>
    <textarea id="mytextarea" name="body">@Model.PostBody</textarea>
    <button type="submit" class="btn btn-success">Submit</button>
}

